# Database Configuration
DB_NAME=monitorbot_db
DB_USER=your_username
DB_PASSWORD=your_password
DB_HOST=localhost

# API Keys
HELIUS_API_KEY=your_helius_api_key
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
CLAUDE_API_KEY=your_claude_api_key
BIRDEYE_API_KEY=your_birdeye_api_key

# Google Sheets Configuration
GOOGLE_SHEETS_CREDENTIALS_FILE=service-account.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id

# Token Configuration
DEFAULT_TOKEN_ADDRESS=your_token_address

# Service Configuration
DATA_COLLECTION_INTERVAL=300  # 5 minutes in seconds
PRICE_UPDATE_INTERVAL=60      # 1 minute in seconds
MAX_RETRIES=3
CACHE_TTL=3600               # 1 hour in seconds

# Monitoring Configuration
ALERT_THRESHOLD_PRICE=0.05    # 5% price change
ALERT_THRESHOLD_VOLUME=0.20   # 20% volume change
ALERT_THRESHOLD_LIQUIDITY=0.15# 15% liquidity change

# Development
DEBUG=True
ENVIRONMENT=development       # development, staging, production
